# =============================================================================
# MCP League System - Environment Configuration Template
# =============================================================================
# Copy this file to .env and customize for your environment.
# Never commit the .env file with real credentials to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# System Configuration
# -----------------------------------------------------------------------------
# Environment: development | staging | production
MCP_ENVIRONMENT=development

# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL
MCP_LOG_LEVEL=INFO

# Enable debug mode (detailed logging, slower performance)
MCP_DEBUG=false

# -----------------------------------------------------------------------------
# Network Configuration
# -----------------------------------------------------------------------------
# Base host for all agents
MCP_HOST=localhost

# League Manager port
MCP_LEAGUE_MANAGER_PORT=8000

# Referee port range (start-end)
MCP_REFEREE_PORT_START=8001
MCP_REFEREE_PORT_END=8010

# Player port range (start-end)
MCP_PLAYER_PORT_START=8101
MCP_PLAYER_PORT_END=8200

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Auth token length (bytes) - minimum 32 recommended for production
MCP_AUTH_TOKEN_LENGTH=32

# Token time-to-live in hours
MCP_AUTH_TOKEN_TTL_HOURS=24

# Secret key for token generation (generate a strong random key for production)
# Example: python -c "import secrets; print(secrets.token_hex(32))"
MCP_SECRET_KEY=your-secret-key-change-in-production

# -----------------------------------------------------------------------------
# Timeout Configuration (seconds)
# -----------------------------------------------------------------------------
# Registration timeout
MCP_TIMEOUT_REGISTER=10

# Player move timeout
MCP_TIMEOUT_MOVE=30

# Generic response timeout
MCP_TIMEOUT_GENERIC=10

# Health check timeout
MCP_TIMEOUT_HEALTH_CHECK=5

# -----------------------------------------------------------------------------
# Retry Policy Configuration
# -----------------------------------------------------------------------------
# Maximum number of retries for failed operations
MCP_RETRY_MAX_ATTEMPTS=3

# Backoff strategy: exponential | linear | constant
MCP_RETRY_BACKOFF_STRATEGY=exponential

# Base delay for retries (seconds)
MCP_RETRY_BASE_DELAY=1.0

# Maximum delay between retries (seconds)
MCP_RETRY_MAX_DELAY=30.0

# Jitter factor (0.0-1.0) to add randomness to retry delays
MCP_RETRY_JITTER=0.1

# -----------------------------------------------------------------------------
# Circuit Breaker Configuration
# -----------------------------------------------------------------------------
# Number of failures before opening circuit
MCP_CIRCUIT_FAILURE_THRESHOLD=5

# Time to wait before attempting recovery (seconds)
MCP_CIRCUIT_RECOVERY_TIMEOUT=60

# Number of successes required to close circuit
MCP_CIRCUIT_SUCCESS_THRESHOLD=2

# -----------------------------------------------------------------------------
# Parallel Processing Configuration
# -----------------------------------------------------------------------------
# Enable concurrent match processing
MCP_ENABLE_PARALLEL_MATCHES=true

# Maximum number of concurrent matches per round
MCP_MAX_CONCURRENT_MATCHES=4

# Number of worker threads for I/O operations
MCP_IO_WORKER_THREADS=8

# Number of worker processes for CPU-bound operations
MCP_CPU_WORKER_PROCESSES=4

# -----------------------------------------------------------------------------
# Data Storage Configuration
# -----------------------------------------------------------------------------
# Base path for data storage (relative to project root)
MCP_DATA_PATH=SHARED/data

# Base path for logs (relative to project root)
MCP_LOGS_PATH=SHARED/logs

# Base path for configuration (relative to project root)
MCP_CONFIG_PATH=SHARED/config

# Enable automatic data backup
MCP_ENABLE_BACKUP=true

# Backup interval in hours
MCP_BACKUP_INTERVAL_HOURS=24

# -----------------------------------------------------------------------------
# League Configuration
# -----------------------------------------------------------------------------
# Default league ID
MCP_DEFAULT_LEAGUE_ID=league_2025_even_odd

# Default game type
MCP_DEFAULT_GAME_TYPE=even_odd

# Scoring: win points
MCP_SCORING_WIN_POINTS=3

# Scoring: draw points
MCP_SCORING_DRAW_POINTS=1

# Scoring: loss points
MCP_SCORING_LOSS_POINTS=0

# -----------------------------------------------------------------------------
# Monitoring & Observability (Optional)
# -----------------------------------------------------------------------------
# Enable metrics collection
MCP_ENABLE_METRICS=false

# Metrics export endpoint (e.g., Prometheus)
# MCP_METRICS_ENDPOINT=http://localhost:9090/metrics

# Enable distributed tracing
MCP_ENABLE_TRACING=false

# Tracing endpoint (e.g., Jaeger)
# MCP_TRACING_ENDPOINT=http://localhost:14268/api/traces

# -----------------------------------------------------------------------------
# External API Keys (if using external services)
# -----------------------------------------------------------------------------
# NOTE: Never commit real API keys. Use environment variables or secrets manager.
# ANTHROPIC_API_KEY=your-api-key-here
# OPENAI_API_KEY=your-api-key-here
